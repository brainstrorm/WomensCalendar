<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="averageMenstruationPickerTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@android:color/white</item>

        <item name="colorControlNormal">@android:color/transparent</item>

        <item name="android:textColorPrimary">@color/colorGreyFont</item>
        <item name="android:background">@color/colorPinkLite</item>
        <item name="android:textSize">48sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="Example4ToolbarTheme" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="colorControlNormal">@color/example_4_grey</item>
    </style>

    <style name="RadioButtonStyle" parent="AppTheme">
        <item name="colorControlNormal">@color/colorGreyNotSelected</item>
        <item name="colorAccent">@color/colorPinkSelected</item>
    </style>

    <style name="graient1">
        <item name="android:startColor">#E9F6FF</item>
        <item name="android:endColor">#FFECD2</item>
    </style>


</resources>
