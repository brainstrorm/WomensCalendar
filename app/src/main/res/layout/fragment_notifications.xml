<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/settings_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.menu.fragment.NotificationsFragment">




    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/period_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="80dp"
            android:text="@string/period_notifications"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></TextView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/notification_menstruation"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bcgr_rect_settings_notifications"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/period_notification">


            <ImageView
                android:id="@+id/arrow_pink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/ic_arrow_settings_notofications"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="10dp"
                android:text="@string/start_of_menstruation"
                android:textColor="@color/black"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="@+id/btn_start_of_menstruation_notification"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/arrow_pink"
                app:layout_constraintTop_toTopOf="parent"></TextView>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginTop="44dp"
                android:layout_marginEnd="10dp"
                android:text="@string/menstruation_starts_today"
                android:textSize="11dp"
                app:layout_constraintEnd_toEndOf="@+id/btn_start_of_menstruation_notification"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/arrow_pink"
                app:layout_constraintTop_toTopOf="parent"></TextView>

            <ImageButton
                android:id="@+id/btn_start_of_menstruation_notification"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:translationZ="0.001dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@null"
                app:layout_constraintEnd_toStartOf="@+id/switch_start_of_menstruation"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></ImageButton>

            <Switch
                android:id="@+id/switch_end_of_menstruation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:translationZ="0.002dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/square_pink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginBottom="35dp"
                android:background="@drawable/ic_square_settngs_notifications"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0"></ImageView>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginTop="86dp"
                android:layout_marginEnd="10dp"
                android:text="@string/end_of_menstruation"
                android:textColor="@color/black"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="@+id/btn_end_of_menstruation_notification"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/square_pink"
                app:layout_constraintTop_toTopOf="parent"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginTop="116dp"
                android:layout_marginEnd="6dp"
                android:text="@string/do_not_forget"
                android:textSize="11dp"
                app:layout_constraintEnd_toEndOf="@+id/btn_end_of_menstruation_notification"
                app:layout_constraintStart_toEndOf="@+id/square_pink"
                app:layout_constraintTop_toTopOf="parent"></TextView>


            <ImageButton
                android:id="@+id/btn_end_of_menstruation_notification"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="84dp"
                android:layout_marginEnd="10dp"
                android:background="@null"
                android:translationZ="0.001dp"
                app:layout_constraintEnd_toStartOf="@+id/switch_end_of_menstruation"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></ImageButton>

            <Switch
                android:id="@+id/switch_start_of_menstruation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:translationZ="0.002dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:src="@drawable/ic_line_for_activity_statistic"
                app:layout_constraintBottom_toTopOf="@+id/btn_end_of_menstruation_notification"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView11" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/notification_ovulation"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/bcgr_rect_settings_notifications"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/notification_menstruation"
            app:layout_constraintVertical_bias="0.0">


            <ImageView
                android:id="@+id/arrow_orange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/ic_arrow_settings_notofications_orange"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:text="@string/open_fertilnost"
                android:textColor="@color/black"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="@+id/btn_open_fetilnost_notification"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/arrow_orange"
                app:layout_constraintTop_toTopOf="parent"></TextView>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginTop="46dp"
                android:layout_marginEnd="10dp"
                android:text="@string/open_fertilnost_today"
                android:textSize="11dp"
                app:layout_constraintEnd_toEndOf="@+id/btn_open_fetilnost_notification"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/arrow_orange"
                app:layout_constraintTop_toTopOf="parent"></TextView>


            <ImageButton
                android:id="@+id/btn_open_fetilnost_notification"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="10dp"
                android:background="@null"
                android:translationZ="0.001dp"
                app:layout_constraintEnd_toStartOf="@+id/switch_open_fetilnost"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></ImageButton>

            <Switch
                android:id="@+id/switch_ovulation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:translationZ="0.002dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/heart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="106dp"
                android:background="@drawable/ic_heart_settings_notifications"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="44dp"
                android:layout_marginTop="94dp"
                android:layout_marginEnd="10dp"
                android:text="@string/ovulation_notifications"
                android:textColor="@color/black"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="@+id/btn_ovulation_notification"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/heart"
                app:layout_constraintTop_toTopOf="parent"></TextView>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="44dp"
                android:layout_marginTop="118dp"
                android:layout_marginEnd="10dp"
                android:text="@string/ovulation_will_stsrt"
                android:textSize="11dp"
                app:layout_constraintEnd_toEndOf="@+id/btn_ovulation_notification"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/heart"
                app:layout_constraintTop_toTopOf="parent"></TextView>


            <ImageButton
                android:id="@+id/btn_ovulation_notification"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="92dp"
                android:layout_marginEnd="10dp"
                android:translationZ="0.001dp"
                android:background="@null"
                app:layout_constraintEnd_toStartOf="@+id/switch_ovulation"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></ImageButton>

            <Switch
                android:id="@+id/switch_open_fetilnost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:translationZ="0.002dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.009" />

            <ImageView
                android:id="@+id/square_orange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="180dp"
                android:background="@drawable/ic_square_settings_notifications_orange"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginTop="164dp"
                android:layout_marginEnd="10dp"
                android:text="@string/end_fertilnost"
                android:textColor="@color/black"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="@+id/close_fetilnost_notofication"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/arrow_orange"
                app:layout_constraintTop_toTopOf="parent"></TextView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginTop="190dp"
                android:layout_marginEnd="10dp"
                android:text="@string/window_of_fertilnost_is_closing"
                android:textSize="11dp"
                app:layout_constraintEnd_toEndOf="@+id/close_fetilnost_notofication"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/arrow_orange"
                app:layout_constraintTop_toTopOf="parent"></TextView>

            <ImageButton
                android:id="@+id/close_fetilnost_notofication"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="164dp"
                android:layout_marginEnd="10dp"
                android:translationZ="0.001dp"
                android:background="@null"
                app:layout_constraintEnd_toStartOf="@+id/switch_closing_ftilnost"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></ImageButton>

            <Switch
                android:id="@+id/switch_closing_ftilnost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="174dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <ImageButton
                android:id="@+id/line"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:src="@drawable/ic_line_for_activity_statistic"
                app:layout_constraintBottom_toTopOf="@+id/close_fetilnost_notofication"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.549"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_ovulation_notification" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:src="@drawable/ic_line_for_activity_statistic"
                app:layout_constraintBottom_toTopOf="@+id/btn_ovulation_notification"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_open_fetilnost_notification" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- TODO: Update blank fragment layout -->

</FrameLayout>